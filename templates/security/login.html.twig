{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 text-center">üîê Sign in with your stamped image</h1>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" enctype="multipart/form-data" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold">Username</label>
                            <input
                                type="text"
                                value="{{ last_username }}"
                                name="_username"
                                id="username"
                                class="form-control"
                                autocomplete="username"
                                required
                                autofocus
                            >
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label fw-semibold">Stamped Image</label>
                            <input
                                type="file"
                                name="_image"
                                id="image"
                                class="form-control"
                                accept=".png,.jpg,.jpeg"
                                required
                            >
                            <div class="form-text">
                                Upload the <strong>stamped image</strong> you received during registration.
                            </div>
                        </div>

                        <input
                            type="hidden"
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="d-grid">
                            <button class="btn btn-outline-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Sign in
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="{{ path('app_register') }}" class="text-decoration-none">
                            Don‚Äôt have an account? <strong>Register here</strong>
                        </a>
                        <br>
                        <a href="{{ path('app_home') }}" class="text-muted small">
                            ‚Üê Back to home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
